datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  // directUrl = env("DIRECT_URL") // optional but recommended for Prisma Migrate
}

generator client {
  provider = "prisma-client-js"
}

model Tour {
  id           String             @id @default(cuid())
  slug         String             @unique
  title        String
  subtitle     String?
  durationDays Int
  themes       String[]
  priceFromUsd Int?
  highlights   String[]
  inclusions   String[]
  exclusions   String[]
  faq          Json?
  gallery      String[]
  itinerary    ItinerarySection[]
  createdAt    DateTime           @default(now())
  updatedAt    DateTime           @updatedAt
}

model ItinerarySection {
  id      String @id @default(cuid())
  day     Int
  title   String
  content String
  tour    Tour   @relation(fields: [tourId], references: [id], onDelete: Cascade)
  tourId  String
}

model Lead {
  id          String    @id @default(cuid())
  tourSlug    String?
  name        String
  email       String
  phone       String?
  nationality String?
  paxAdults   Int
  paxChildren Int       @default(0)
  startDate   DateTime?
  nights      Int?
  budgetBand  String?
  interests   String[]
  message     String?
  source      String?
  createdAt   DateTime  @default(now())
}
